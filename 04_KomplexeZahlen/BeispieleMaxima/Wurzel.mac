/* Matrix-Darstellung von komplexen Zahlen [a,b]:

  a -b
  b a

*/

c2m(x) := matrix([x[1],-x[2]],[x[2],x[1]]);
mcp(m) := matrix_size(m) = [2,2] and m[1,1] = m[2,2] and m[2,1] = -m[1,2];
m2c(m) := [m[1,1], m[2,1]];

/*

  mcp(c2m([a,b]) + c2m([c,d]));
    true
  m2c(c2m([a,b]) + c2m([c,d]));
    [c+a,d+b]

  mcp(c2m([a,b]) . c2m([c,d]));
    true
  m2c(c2m([a,b]) . c2m([c,d]));
    [a*c-b*d,a*d+b*c]
  cmul([a,b],[c,d]);
    [a*c-b*d,a*d+b*c]

  mcp(invert(c2m([a,b])));
    true
  m2c(invert(c2m([a,b])));
    [a/(b^2+a^2),-b/(b^2+a^2)]
  crec([a,b]);
    [a/(b^2+a^2),-b/(b^2+a^2)]

*/

/* Komplexe Zahlen als Vektoren */

load("eigen");

c2v(x) := columnvector(x);
v2c(v) := [v[1][1], v[2][1]];

/*

v2c(c2m([a,b]) . c2v([c,d]));
  [a*c-b*d,a*d+b*c]

