/* Testen auf Null: */

rw12(x) := cmul(w1(x),w1(x))[1];
iw12(x) := cmul(w1(x),w1(x))[2];
rw22(x) := cmul(w2(x),w2(x))[1];
iw22(x) := cmul(w2(x),w2(x))[2];

