plot2d([p([a,1]), q([a,1])], [a,-10,10]);
plot2d([p([a,2]), q([a,2])], [a,-10,10]);

plot3d(p([a,b]), [a,-10,10], [b,-10,10])$
plot3d(q([a,b]), [a,-10,10], [b,-10,10])$

plot3d(p([a,b]), [a,-10,10], [b,0,10])$
