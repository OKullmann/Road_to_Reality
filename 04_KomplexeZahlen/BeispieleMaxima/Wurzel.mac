forget(b >= 0);
assume(b < 0);
  [a,b];
forget(a > 0);
assume(a < 0);
radcan(cexp(clog([a,b],n)));
  [a,b]
forget(b < 0);
assume(b >= 0);
radcan(cexp(clog([a,b],n)));
  [a,b]

*/

/* a^b im k-ten Zweig: */
cpow(a,b,k) := cexp(clog(a,k) * b);
