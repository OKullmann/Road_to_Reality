/* Wurzeln von [a,b] (entsprechend "a+i b")*/

display2d : false;

/* The Operationen mit komplexen Zahlen [a,b]: */
cadd(x,y) := [x[1]+y[1], x[2]+y[2]];
cmul(x,y) := combine([x[1]*y[1] - x[2]*y[2], x[1]*y[2] + x[2]*y[1]]);
ccon(x)   := [x[1], -x[2]];
casq(x)   := x[1]^2 + x[2]^2;
cabs(x)   := sqrt(casq(x));
crec(x)   := ccon(x) / casq(x);

/* n >= 0: */
cpow(x,n) := if n<0 then crec(cpow(x,-n))
  else if n=0 then [1,0] else if n=1 then x
  else cmul(x, cpow(x,n-1));

/* Beispiele:
cadd([a,b],[c,d]);
  [c+a,d+b]
cmul([a,b],[c,d]);
  [a*c-b*d,a*d+b*c]
ccon([a,b]);
  [a,-b]
casq([a,b]);
  b^2+a^2
cabs([a,b]);
  sqrt(b^2+a^2)
crec([a,b]);
  [a/(b^2+a^2),-b/(b^2+a^2)]
*/


sgn(x) := if x>=0 then 1 else -1;

p(x) := sqrt(1/2*(x[1] + cabs(x)));
h(x) := sqrt(1/2*(-x[1] + cabs(x)));
q(x) := sgn(x[2]) * h(x);
/* Anmerkungen fuer b=0:
   p([a,0]) = if a>=0 then sqrt(a) else 0
   q([a,0]) = if a>=0 then 0 else sqrt(-a)
*/

/* Die beiden Wurzeln: */
w1(x) := [p(x), q(x)];
w2(x) := -w1(x);

/*

Anschauen von Wurzeln:

